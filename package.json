{
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "remove_api_folder": "node -e require('rimraf').sync('src/api')",
    "api_generator": "yarn openapi-generator-cli generate -i src/api_specs/openapi.yml -o src/api -g typescript-fetch --additional-properties=supportsES6=true,npmVersion=6.9.0,typescriptThreePlus=true",
    "generateApi": "yarn run remove_api_folder && yarn run api_generator",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/pro-layout": "^6.5.0",
    "@nivo/core": "^0.79.0",
    "@nivo/heatmap": "^0.79.1",
    "@nivo/legends": "^0.79.1",
    "@openapitools/openapi-generator-cli": "^2.4.26",
    "bootstrap": "^5.1.3",
    "react": "17.x",
    "react-bootstrap": "^2.4.0",
    "react-bootstrap-typeahead": "^6.0.0-rc.3",
    "react-dom": "17.x",
    "umi": "^3.5.30"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.6.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.5.30",
    "express": "^4.18.1",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.0",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  }
}
